---
title: Blog
permalink: false
---

  {{#each collections.articles}}
  <section>
    {{#if @first}}
    <div class="image main" data-position="center">
      <img src="/images/banner.jpg" alt="" />
    </div>
    {{/if}}

    <div class="container">
      <h2>{{ title }}</h2>
      <p>{{ snippet }}</p>
      <footer>
        <a href="{{ permalink }}">Continue reading</a>
      </footer>
    </div>
  </section>
  {{/each}}
